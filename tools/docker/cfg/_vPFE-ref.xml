<domain type='kvm'>
  <name>vPFE</name>
  <memory unit='MB'>16384</memory>
  <memoryBacking>
    <nosharepages/>
    <hugepages/>
  </memoryBacking>
  <vcpu placement='static'>16</vcpu>
  <numatune>
    <memory mode='preferred' nodeset='0'/>
  </numatune>
  <os>
    <type arch='x86_64' machine='pc-i440fx-trusty'>hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
  </features>
  <cpu mode='host-model'>
    <topology sockets='1' cores='X' threads='1'/>
  </cpu>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <disk type='file' device='disk'>
      <driver name='qemu' type='raw' cache='directsync'/>
      <source file='PFE IMAGE'/>
      <target dev='hda' bus='ide'/>
    </disk>
    <disk type='file' device='disk'>
      <driver name='qemu' type='raw' cache='directsync'/>
      <source file='/root/VMX/metadata_usb_zt.img'/>
      <target dev='sda' bus='usb'/>
    </disk>
    <controller type='pci' index='0' model='pci-root'/>
    <interface type='bridge' name='EXTERNAL_BRIDGE'>
      <source bridge='EXTERNAL_BRIDGE'/>
      <target dev='PFE_EXTERNAL_TAP_IF'/>
      <model type='virtio'/>
      <alias name='net0'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x03' function='0x0'/>
    </interface>
    <interface type='bridge'>
      <source bridge='INTERNAL_BRIDGE'/>
      <target dev='PFE_INTERNAL_TAP_IF'/>
      <model type='virtio'/>
      <alias name='net0'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x04' function='0x0'/>
    </interface>
   <serial type='tcp'>
      <source mode='bind' host='127.0.0.1' service='8602'/>
      <protocol type='telnet'/>
      <target port='0'/>
    </serial>
    <console type='tcp'>
      <source mode='bind' host='127.0.0.1' service='8602'/>
      <protocol type='telnet'/>
      <target type='serial' port='0'/>
    </console>
    <input type='tablet' bus='usb'/>
    <input type='mouse' bus='ps2'/>
    <input type='keyboard' bus='ps2'/>
    <graphics type='vnc' port='-1' autoport='yes' listen='127.0.0.1'>
      <listen type='address' address='127.0.0.1'/>
    </graphics>
    <sound model='ac97'>
    </sound>
    <video>
      <model type='cirrus' vram='9216' heads='1'/>
    </video>
    <memballoon model='virtio'>
    </memballoon>
  </devices>
</domain>

